# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.account.MainController.index()
GET		/addTask					controllers.maintenance.AddTask.index()
GET 	/showTasks					controllers.maintenance.ShowTasks.index()
GET		/tasksQuery					controllers.maintenance.TasksQuery.index()
GET 	/tasksQueryOnType			controllers.maintenance.TasksQueryOnType.index()
GET 	/tasksQueryOnDeadline		controllers.maintenance.TasksQueryOnDeadline.index()
GET		/tasksQueryOnStatus			controllers.maintenance.TasksQueryOnStatus.index()
GET		/tasksQueryOnMultiple		controllers.maintenance.TasksQueryOnMultiple.index()
GET		/editTask					controllers.maintenance.EditTask.index()

# Account
POST	/signup						controllers.account.MainController.signUp()
GET		/selectApartment			controllers.account.SelectApartment.index()
GET		/profile					controllers.account.ProfileController.index()
GET		/verifyAccount				controllers.account.VerifyAccount.index()

# Messaging
GET  /form/thread           		controllers.communications.ThreadController.registerThread()
GET  /allthreads               		controllers.communications.ThreadController.allThreads()
POST /thread                		controllers.communications.ThreadController.createThread()
GET  /viewthread            		controllers.communications.ThreadController.loadThread()
POST /thread/:thread/message  		controllers.communications.ThreadController.talk(thread:Long)

# POST /chat/:chat/image    controllers.Chats.receiveImage(chat:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)